<%= comfy_form_for @comment, :as => :comment, :url => comfy_blog_comments_path(@cms_site.path, @blog.path, @post.slug) do |form| %>
  <% # don't need this when installed into your app %>
  <%= form.hidden_field :authenticity_token, :value => form_authenticity_token %>
  <paper-input-decorator class="input_field" label="Your Name" floatingLabel>
    <%= form.text_field :author, label: '&nbsp;'.html_safe %>
  </paper-input-decorator>

  <paper-input-decorator class="input_field" label="Email" floatingLabel>
    <%= form.text_field :email, label: '&nbsp;'.html_safe %>
  </paper-input-decorator>

  <paper-input-decorator class="input_field" label="Content" floatingLabel>
    <paper-autogrow-textarea>
      <%= form.text_area :content, label: '&nbsp;'.html_safe %>
    </paper-autogrow-textarea>
  </paper-input-decorator>

  <%= form.submit 'Submit', :class => 'btn btn-primary' %>
<% end %>
